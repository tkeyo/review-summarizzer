{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "jinja": true,
            "console": "integratedTerminal"
        }
    ]
} 